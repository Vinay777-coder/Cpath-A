          id: (Date.now() + 1).toString(),
          role: 'assistant',
          content: data.response || data.message || getSmartFallbackResponse(textToSend),
          timestamp: new Date()
        }
        return [...filteredMessages, assistantMessage]
      })
    } catch (error) {
