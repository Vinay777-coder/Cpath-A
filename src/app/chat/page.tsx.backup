        const filteredMessages = prev.filter(msg => msg.id !== 'typing')
        const errorMessage: Message = {
          id: (Date.now() + 1).toString(),
          role: 'assistant',
          content: getSmartFallbackResponse(textToSend),
          timestamp: new Date()
        }
        return [...filteredMessages, errorMessage]
      })
    } finally {
